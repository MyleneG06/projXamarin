<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage  xmlns:pages="http://rotorgames.com" 
                  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimApp.Views.PopPup"
             BackgroundClicked="PopupPage_BackgroundClicked"
             CloseWhenBackgroundIsClicked="False">
    <StackLayout WidthRequest="500" HeightRequest="400" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White">
        
        <WebView Source="https://www.youtube.com/watch?v=VLT5B26W3PA" WidthRequest="400" HeightRequest="500"/>
        <Button Text="Close" Clicked="ClosePopPup"/>
        
    </StackLayout>
</pages:PopupPage>